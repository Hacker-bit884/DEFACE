    <script>
        // =============================================
        // PROTEÇÃO CONTRA INSPEÇÃO DE CÓDIGO
        // =============================================
        
        // Bloqueia botão direito
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
            getRealIP().then(ip => {
                showAccessDenied(ip);
            });
            return false;
        });
        
        // Bloqueia teclas de atalho
        document.addEventListener('keydown', function(e) {
            // Bloqueia F12, Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+U, etc.
            if (e.key === 'F12' || 
                (e.ctrlKey && e.shiftKey && e.key === 'I') || 
                (e.ctrlKey && e.shiftKey && e.key === 'J') || 
                (e.ctrlKey && e.key === 'u') ||
                e.key === 'F11' ||
                (e.ctrlKey && e.key === 'Esc') ||
                (e.ctrlKey && e.key === 'Delete') ||
                e.key === 'Escape') {
                e.preventDefault();
                getRealIP().then(ip => {
                    showAccessDenied(ip);
                });
                return false;
            }
        });
        
        // Função para obter o IP real usando API
        function getRealIP() {
            return new Promise((resolve) => {
                // Primeiro tenta a API ipify
                fetch('https://api.ipify.org?format=json')
                    .then(response => {
                        if (!response.ok) throw new Error('Falha na requisição');
                        return response.json();
                    })
                    .then(data => resolve(data.ip))
                    .catch(() => {
                        // Se falhar, tenta outra API
                        fetch('https://ipapi.co/json/')
                            .then(response => {
                                if (!response.ok) throw new Error('Falha na requisição');
                                return response.json();
                            })
                            .then(data => resolve(data.ip))
                            .catch(() => {
                                // Se tudo falhar, mostra um IP aleatório (só para efeito visual)
                                const fakeIP = `${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}`;
                                resolve(fakeIP);
                            });
                    });
            });
        }
        
        // Força tela cheia
        function requestFullscreen() {
            const elem = document.documentElement;
            if (elem.requestFullscreen) {
                elem.requestFullscreen().catch(err => {
                    console.error(`Erro ao tentar tela cheia: ${err.message}`);
                });
            } else if (elem.webkitRequestFullscreen) { /* Safari */
                elem.webkitRequestFullscreen();
            } else if (elem.msRequestFullscreen) { /* IE11 */
                elem.msRequestFullscreen();
            }
        }
        
        // Monitora saída do modo tela cheia
        document.addEventListener('fullscreenchange', () => {
            if (!document.fullscreenElement) {
                requestFullscreen();
                getRealIP().then(ip => {
                    showAccessDenied(ip);
                });
            }
        });
        
        document.addEventListener('webkitfullscreenchange', () => {
            if (!document.webkitFullscreenElement) {
                requestFullscreen();
                getRealIP().then(ip => {
                    showAccessDenied(ip);
                });
            }
        });
        
        // =============================================
        // FUNÇÕES PRINCIPAIS
        // =============================================
        
        function showAccessDenied(userIP) {
            const denied = document.getElementById('accessDenied');
            denied.style.display = 'flex';
            
            // Mostra o IP do usuário
            document.getElementById('userRealIP').textContent = userIP;
            
            let count = 10; // Aumentei o tempo para 10 segundos
            const countdown = document.getElementById('fakeCountdown');
            const interval = setInterval(() => {
                count--;
                countdown.textContent = `BLOQUEIO DO SISTEMA EM: ${count}`;
                
                // Efeito de flash a cada segundo
                if (count <= 5) {
                    const flash = document.getElementById('emergencyFlash');
                    flash.style.animation = 'emergencyFlash 0.3s';
                    setTimeout(() => {
                        flash.style.animation = '';
                    }, 300);
                }
                
                if (count <= 0) {
                    clearInterval(interval);
                    denied.style.display = 'none';
                    // Mostra tela azul fake
                    showBlueScreen();
                }
            }, 1000);
            
            // Adiciona efeito de flash vermelho inicial
            const flash = document.getElementById('emergencyFlash');
            flash.style.animation = 'emergencyFlash 0.5s';
            setTimeout(() => {
                flash.style.animation = '';
            }, 500);
        }
        
        function showBlueScreen() {
            const blueScreen = document.getElementById('blueScreen');
            blueScreen.style.display = 'block';
            
            // Adiciona efeito de flash vermelho
            const flash = document.getElementById('emergencyFlash');
            flash.style.animation = 'emergencyFlash 0.5s';
            setTimeout(() => {
                flash.style.animation = '';
            }, 500);
            
            setTimeout(() => {
                blueScreen.style.display = 'none';
            }, 15000); // Aumentei o tempo para 15 segundos
        }
        
        // Efeito Matrix melhorado
        function createMatrix() {
            const matrix = document.getElementById('matrix');
            const chars = "01█▓▒░│║╬╣╫╪╨╧╩╦╥╤╣╢╡╠╟╞╝╜╛╚╙╘╗╖╕╔╓╒║═";
            
            for (let i = 0; i < 300; i++) { // Aumentei para 300 elementos
                const element = document.createElement('div');
                element.className = 'binary-code';
                element.style.left = Math.random() * 100 + 'vw';
                element.style.animationDuration = (Math.random() * 8 + 3) + 's'; // Mais variação
                element.style.animationDelay = (Math.random() * 8) + 's';
                element.style.opacity = Math.random() * 0.5 + 0.3;
                
                let text = '';
                const length = Math.floor(Math.random() * 80) + 30; // Linhas mais longas
                for (let j = 0; j < length; j++) {
                    text += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                
                element.textContent = text;
                matrix.appendChild(element);
            }
        }
        
        // Cria efeito de partículas
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 100; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.top = Math.random() * 100 + 'vh';
                particle.style.width = (Math.random() * 3 + 1) + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDuration = (Math.random() * 10 + 5) + 's';
                particle.style.animationDelay = (Math.random() * 5) + 's';
                particlesContainer.appendChild(particle);
            }
        }
        
        // Cria efeito de linhas de conexão hacker
        function createConnectionLines() {
            const container = document.getElementById('connectionLines');
            for (let i = 0; i < 15; i++) {
                const line = document.createElement('div');
                line.className = 'connection-line';
                
                const x1 = Math.random() * 100;
                const y1 = Math.random() * 100;
                const x2 = Math.random() * 100;
                const y2 = Math.random() * 100;
                
                const length = Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));
                const angle = Math.atan2(y2 - y1, x2 - x1) * 180 / Math.PI;
                
                line.style.width = length + 'vw';
                line.style.height = (Math.random() * 2 + 1) + 'px';
                line.style.left = x1 + 'vw';
                line.style.top = y1 + 'vh';
                line.style.transform = `rotate(${angle}deg)`;
                line.style.animationDelay = (Math.random() * 3) + 's';
                
                container.appendChild(line);
            }
        }
        
        // Efeito de digitação no terminal
        function typeTerminalLines() {
            const lines = document.querySelectorAll('.terminal-line');
            lines.forEach((line, index) => {
                line.style.animationDelay = (index * 0.5) + 's';
                line.style.width = '0';
                setTimeout(() => {
                    line.style.width = '100%';
                }, index * 500);
            });
        }
        
        // Atualiza console com mensagens
        function updateConsole() {
            const consoleElement = document.getElementById('console');
            const messages = [
                "> Escaneando portas vulneráveis...",
                "> Explorando vulnerabilidade CVE-2023-32456...",
                "> Contornando firewall...",
                "> Injetando payload malicioso...",
                "> Estabelecendo persistência...",
