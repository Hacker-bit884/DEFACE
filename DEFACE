                "> Deletando logs...",
                "> Operação concluída com sucesso",
                "> Iniciando rotina de limpeza...",
                "> Sobrescrevendo setores do disco...",
                "> Modificando registros do sistema...",
                "> Implantando rootkit...",
                "> Ativando keylogger...",
                "> Configurando backdoor remoto...",
                "> Conectando à rede Tor...",
                "> Ocultando processos maliciosos...",
                "> Bypassando autenticação de dois fatores...",
                "> Explorando vulnerabilidade zero-day...",
                "> Comprometendo serviços de rede...",
                "> Infectando dispositivos conectados...",
                "> Estabelecendo persistência em BIOS...",
                "> Modificando tabelas de roteamento...",
                "> Interceptando tráfego de rede...",
                "> Criando backdoor em serviços essenciais...",
                "> Ocultando arquivos maliciosos...",
                "> Preparando ataque de negação de serviço..."
            ];
            
            let index = 3; // Já temos 3 linhas iniciais
            
            const interval = setInterval(() => {
                if (index < messages.length) {
                    const line = document.createElement('div');
                    line.className = 'console-line';
                    line.textContent = messages[index];
                    consoleElement.appendChild(line);
                    
                    // Remove linhas antigas para não sobrecarregar
                    if (consoleElement.children.length > 20) {
                        consoleElement.removeChild(consoleElement.children[0]);
                    }
                    
                    index++;
                } else {
                    clearInterval(interval);
                }
            }, 2000); // Diminuí o intervalo para 2 segundos
        }
        
        // Mostra IP fake do alvo
        function showFakeIP() {
            const ipDisplay = document.getElementById('ipDisplay');
            const ip = `${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}`;
            ipDisplay.textContent = `IP ALVO: ${ip}`;
        }
        
        // Contagem regressiva hacker
        function startCountdown() {
            const countdown = document.getElementById('countdown');
            let minutes = 4;
            let seconds = 59;
            
            const interval = setInterval(() => {
                countdown.textContent = `AUTO-DESTRUIÇÃO: ${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                seconds--;
                if (seconds < 0) {
                    minutes--;
                    seconds = 59;
                }
                
                if (minutes < 0) {
                    clearInterval(interval);
                    countdown.textContent = "AUTO-DESTRUIÇÃO ATIVADA";
                    countdown.style.color = "red";
                    countdown.style.animation = "denyGlitch 0.1s infinite";
                    
                    // Mostra efeito de explosão
                    document.body.style.animation = "denyGlitch 0.05s 20";
                    setTimeout(() => {
                        document.body.style.animation = "";
                    }, 1000);
                    
                    // Mostra tela de acesso negado
                    getRealIP().then(ip => {
                        showAccessDenied(ip);
                    });
                }
            }, 1000);
        }
        
        // Alerta de vírus fake melhorado
        function showVirusAlert() {
            const virusAlert = document.getElementById('virusAlert');
            const scanProgress = document.getElementById('fakeScanProgress');
            const virusText = document.getElementById('virusAlertText');
            
            virusAlert.style.display = 'block';
            
            // Anima a barra de progresso
            let width = 0;
            const scanInterval = setInterval(() => {
                width += 2;
                scanProgress.style.width = width + '%';
                
                // Atualiza texto
                if (width < 20) {
                    virusText.textContent = "ESCANEANDO SISTEMA EM BUSCA DE VULNERABILIDADES...";
                } else if (width < 40) {
                    virusText.textContent = "DETECTADO: TROJAN.WIN32.HACKERANONIMO";
                } else if (width < 60) {
                    virusText.textContent = "ANALISANDO ARQUIVOS DO SISTEMA...";
                } else if (width < 80) {
                    virusText.textContent = "INFECTANDO ARQUIVOS DO SISTEMA...";
                } else {
                    virusText.textContent = "INFECÇÃO COMPLETA! SEUS DADOS FORAM COMPROMETIDOS!";
                }
                
                if (width >= 100) {
                    clearInterval(scanInterval);
                }
            }, 80);
        }
        
        // =============================================
        // EVENTOS DE BOTÕES
        // =============================================
        
        document.getElementById('nukeBtn').addEventListener('click', function() {
            this.textContent = "PAYLOAD ATIVADO!";
            this.style.backgroundColor = "rgba(100, 0, 0, 0.7)";
            this.style.boxShadow = "0 0 25px red";
            this.style.color = "white";
            
            // Adiciona mensagem ao console
            const consoleElement = document.getElementById('console');
            const line = document.createElement('div');
            line.className = 'console-line';
            line.textContent = "> ALERTA: PAYLOAD DESTRUTIVO ATIVADO";
            line.style.color = "red";
            consoleElement.appendChild(line);
            
            // Efeito de tela tremendo
            document.body.style.animation = "denyGlitch 0.1s 10";
            setTimeout(() => {
                document.body.style.animation = "";
            }, 1000);
            
            // Mostra tela azul após 3 segundos
            setTimeout(() => {
                showBlueScreen();
            }, 3000);
        });
        
        document.getElementById('scareBtn').addEventListener('click', function() {
            this.textContent = "ESCANEANDO...";
            this.disabled = true;
            
            setTimeout(() => {
                this.textContent = "REDE COMPROMETIDA!";
                this.style.backgroundColor = "rgba(0, 100, 0, 0.7)";
                this.disabled = false;
                
                // Mostra mensagem de acesso
                getRealIP().then(ip => {
                    const denied = document.getElementById('accessDenied');
                    denied.style.display = 'flex';
                    denied.querySelector('h2').textContent = "VIOLAÇÃO DE REDE DETECTADA";
                    denied.querySelectorAll('p')[0].textContent = "TODOS OS DISPOSITIVOS CONECTADOS INFECTADOS";
                    denied.querySelectorAll('p')[1].textContent = "EXFILTRAÇÃO DE DADOS EM ANDAMENTO";
                    denied.querySelectorAll('p')[2].textContent = "RANSOMWARE IMPLANTADO";
                    document.getElementById('userRealIP').textContent = ip;
                    
                    setTimeout(() => {
                        denied.style.display = 'none';
                    }, 5000); // Aumentei para 5 segundos
                });
            }, 2000);
        });
        
        document.getElementById('fakeVirus').addEventListener('click', function() {
            showVirusAlert();
        });
        
        document.getElementById('closeVirusAlert').addEventListener('click', function() {
            document.getElementById('virusAlert').style.display = 'none';
            showBlueScreen();
        });
        
        document.getElementById('bsodRestart').addEventListener('click', function() {
            document.getElementById('blueScreen').style.display = 'none';
            // Simula reinicialização
            const loadingScreen = document.getElementById('loadingScreen');
            loadingScreen.style.display = 'flex';
            simulateLoading(true);
        });
        
        document.getElementById('bsodContinue').addEventListener('click', function() {
            document.getElementById('blueScreen').style.display = 'none';
            // Mostra mensagem de erro
            const consoleElement = document.getElementById('console');
            const line = document.createElement('div');
            line.className = 'console-line';
            line.textContent = "> AVISO: INTEGRIDADE DO SISTEMA COMPROMETIDA";
            line.style.color = "red";
            consoleElement.appendChild(line);
            
            // Adiciona mais mensagens de erro
            setTimeout(() => {
                const line2 = document.createElement('div');
                line2.className = 'console-line';
                line2.textContent = "> ERRO: MEMÓRIA CORROMPIDA EM SETORES CRÍTICOS";
                line2.style.color = "red";
                consoleElement.appendChild(line2);
            }, 1500);
        });
        
        // =============================================
        // EFEITOS ALEATÓRIOS
        // =============================================
        
        function randomEffects() {
            // Efeito de glitch aleatório
            setInterval(() => {
                if (Math.random() > 0.8) {
                    document.body.style.filter = 'brightness(1.5)';
                    setTimeout(() => {
                        document.body.style.filter = 'brightness(1)';
                    }, 100);
                }
            }, 5000);
            
            // Efeito de texto tremendo
            setInterval(() => {
                if (Math.random() > 0.9) {
                    const h1 = document.querySelector('h1');
                    h1.style.animation = 'denyGlitch 0.2s 3';
                    setTimeout(() => {
                        h1.style.animation = 'glitch 1s linear infinite';
                    }, 600);
                }
            }, 10000);
            
            // Alerta de vírus aleatório
            setInterval(() => {
                if (Math.random() > 0.95) {
                    showVirusAlert();
                }
            }, 45000); // Aumentei para 45 segundos
            
            // Efeito de IP aleatório
            setInterval(() => {
                if (Math.random() > 0.9) {
                    showFakeIP();
                }
            }, 20000); // Aumentei para 20 segundos
        }
        
        // =============================================
        // TELA DE CARREGAMENTO MELHORADA
        // =============================================
        
        function simulateLoading(restart = false) {
            const loadingStatus = document.getElementById('loadingStatus');
            const loadingDetails = document.getElementById('loadingDetails');
            const loadingPercentage = document.getElementById('loadingPercentage');
            
            const statusMessages = [
                "> Carregando módulos de penetração...",
                "> Conectando à rede TOR...",
                "> Baixando exploits...",
                "> Contornando firewalls...",
                "> Injetando código malicioso...",
                "> Estabelecendo conexão segura...",
                "> Preparando payload final...",
                "> Quase lá...",
                "> Inicialização completa!"
            ];
            
            const detailMessages = [
                "Backdoor instalado com sucesso",
                "Criptografia de payload em progresso",
                "Módulo de spyware ativado",
                "Keylogger inicializado",
                "Ransomware implantado",
                "Exfiltração de dados pronta",
                "Rootkit instalado",
                "Persistência do sistema estabelecida",
                "Limpando rastros...",
                "Finalizando sequência de invasão",
                "Explorando vulnerabilidades conhecidas",
                "Obtendo privilégios de root",
                "Infectando arquivos do sistema",
                "Modificando registros do Windows",
                "Ocultando processos maliciosos",
                "Criando usuário administrador oculto",
                "Desativando antivírus",
                "Sobrescrevendo logs de segurança",
                "Estabelecendo conexão reversa",
                "Preparando rotina de auto-destruição",
                "Bypassando autenticação de dois fatores",
                "Explorando vulnerabilidade zero-day",
                "Comprometendo serviços de rede",
                "Infectando dispositivos conectados",
                "Estabelecendo persistência em BIOS",
                "Modificando tabelas de roteamento",
                "Interceptando tráfego de rede",
                "Criando backdoor em serviços essenciais",
                "Ocultando arquivos maliciosos",
                "Preparando ataque de negação de serviço",
                "Explorando falhas de buffer overflow",
                "Injetando shellcode remoto",
                "Comprometendo serviços de autenticação",
                "Interceptando credenciais de usuário",
                "Explorando vulnerabilidades de dia zero",
                "Comprometendo serviços de virtualização",
                "Infectando máquinas virtuais",
                "Explorando falhas de hypervisor",
                "Comprometendo containers Docker",
                "Infectando imagens de container",
                "Explorando falhas de orquestração"
            ];
            
            let currentStatus = 0;
            let currentDetail = 0;
            let percent = 0;
            
            const statusInterval = setInterval(() => {
                // Atualiza porcentagem
                percent += 2 + Math.floor(Math.random() * 3); // Diminuí a velocidade
                if (percent > 100) percent = 100;
                loadingPercentage.textContent = `${percent}%`;
                
                // Atualiza mensagens
                if (currentStatus < statusMessages.length && percent >= (currentStatus * (100/statusMessages.length))) {
                    loadingStatus.textContent = statusMessages[currentStatus];
                    currentStatus++;
                }
                
                if (currentDetail < detailMessages.length && percent >= (currentDetail * (100/detailMessages.length))) {
                    loadingDetails.textContent = detailMessages[currentDetail];
                    currentDetail++;
                }
                
                if (percent >= 100) {
                    clearInterval(statusInterval);
                    // Esconde tela de carregamento
                    setTimeout(() => {
                        document.getElementById('loadingScreen').style.display = 'none';
                        // Força tela cheia
                        if (!restart) {
                            requestFullscreen();
                        }
                    }, 1000);
                }
            }, 300);
        }
        
        // =============================================
        // INICIALIZAÇÃO
        // =============================================
        
        window.onload = function() {
            // Inicia tela de carregamento
            simulateLoading();
            
            // Inicializa efeitos
            createMatrix();
            createParticles();
            createConnectionLines();
            typeTerminalLines();
            updateConsole();
            showFakeIP();
            startCountdown();
            randomEffects();
            
            // Proteção adicional contra inspeção
            Object.defineProperty(document, 'visibilityState', {value: 'visible', writable: false});
            Object.defineProperty(document, 'hidden', {value: false, writable: false});
            Object.defineProperty(document, 'webkitVisibilityState', {value: 'visible', writable: false});
            Object.defineProperty(document, 'webkitHidden', {value: false, writable: false});
            
            setInterval(() => {
                if (document.visibilityState !== 'visible' || document.hidden || 
                    document.webkitVisibilityState !== 'visible' || document.webkitHidden) {
                    getRealIP().then(ip => {
                        showAccessDenied(ip);
                    });
                }
            }, 1000);
            
            // Corrige bug de scroll
            document.body.style.overflow = 'hidden';
            window.scrollTo(0, 0);
            document.addEventListener('scroll', function(e) {
                window.scrollTo(0, 0);
            });
            
            // Previne toques indesejados em dispositivos móveis
            document.addEventListener('touchmove', function(e) {
                e.preventDefault();
            }, { passive: false });
        };
    </script>
</body>
</html>
